<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">vendor_productnotes_productnotes_form.productnotes_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Vendor\ProductNotes\Block\Adminhtml\ProductNotes\Edit\BackButton"/>
			<button name="delete" class="Vendor\ProductNotes\Block\Adminhtml\ProductNotes\Edit\DeleteButton"/>
			<button name="save" class="Vendor\ProductNotes\Block\Adminhtml\ProductNotes\Edit\SaveButton"/>
			<button name="save_and_continue" class="Vendor\ProductNotes\Block\Adminhtml\ProductNotes\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>vendor_productnotes_productnotes_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>vendor_productnotes_productnotes_form.productnotes_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="productnotes_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="productnotes_form_data_source" class="Vendor\ProductNotes\Model\ProductNotes\DataProvider">
			<settings>
				<requestFieldName>note_id</requestFieldName>
				<primaryFieldName>note_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="product_id" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">ProductNotes</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">product_id</label>
				<dataScope>product_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="note_title" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">ProductNotes</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">note_title</label>
				<dataScope>note_title</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="note_details" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">ProductNotes</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">note_details</label>
				<dataScope>note_details</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="created_at" formElement="textarea" sortOrder="110">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">ProductNotes</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">created_at</label>
				<dataScope>created_at</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
